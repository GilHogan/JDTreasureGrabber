{
	"name": "JDTreasureGrabber",
	"version": "0.3.0",
	"author": "hogan <hogan01.id@gmail.com> (https://github.com/HoganGolden)",
	"private": true,
	"main": "main.js",
	"engines": {
		"node": ">=16.3.0 <=16.20.1"
	},
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"dist": "vue-cli-service build && electron-builder --publish never",
		"start": "chcp 65001 && electron .",
		"release": "vue-cli-service build && electron-builder --publish always",
		"dist-arm": "USE_SYSTEM_FPM=true npm run dist"
	},
	"dependencies": {
		"@vueuse/core": "^10.7.0",
		"carlo": "^0.9.46",
		"core-js": "^3.16.3",
		"dayjs": "^1.11.7",
		"puppeteer-core": "^20.7.2",
		"vue": "^3.3.11"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^5.0.8",
		"@vue/cli-plugin-eslint": "^5.0.8",
		"@vue/cli-service": "^5.0.8",
		"babel-eslint": "^10.0.3",
		"babel-plugin-component": "^1.1.1",
		"electron": "^25.1.1",
		"electron-builder": "^24.4.0",
		"element-plus": "^2.4.3",
		"eslint": "^7.32.0",
		"eslint-plugin-vue": "^9.19.2"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended"
		],
		"parserOptions": {
			"parser": "babel-eslint"
		},
		"rules": {
			"no-unused-vars": "off"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"build": {
		"productName": "JDTreasureGrabber",
		"appId": "com.hogan.JDTreasureGrabber",
		"icon": "./public/favicon_512x512.png",
		"win": {
			"artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
			"target": [
				"msi",
				"nsis",
				"zip"
			],
			"icon": "./public/favicon.ico"
		},
		"mac": {
			"artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
			"icon": "./public/favicon.png",
			"target": [
				"dmg",
				"zip"
			]
		},
		"linux": {
			"artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
			"desktop": {
				"StartupNotify": "true",
				"Encoding": "UTF-8"
			},
			"icon": "./public/",
			"target": [
				"AppImage",
				"rpm",
				"deb",
				"zip",
				"apk"
			]
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false,
			"perMachine": false
		},
		"publish": [
			{
				"provider": "github",
				"owner": "HoganGolden",
				"repo": "JDTreasureGrabber"
			}
		],
		"extraFiles": [
			{
				"from": "./LICENSE",
				"to": "./"
			}
		]
	}
}
